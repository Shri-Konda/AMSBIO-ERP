<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="ti_amsbio_crm_event_sales_team_crm_tag_view_tree" model="ir.ui.view"> 
        <field name="name">sales.team.crm.tag.view.tree.inherit</field>
        <field name="model">crm.tag</field>
        <field name="inherit_id" ref="sales_team.sales_team_crm_tag_view_tree"/>
        <field name="arch" type="xml">
            <data>
                <field name="name" position="after">
                    <field name="id" invisible="1"/>
                    <field name="child_ids" invisible="1"/>
                    <field name="parent_id" domain="[('id', '!=', id), ('parent_id', '=', False)]"/>
                </field>
            </data>
        </field>
    </record>

    <record id="ti_amsbio_crm_event_crm_lead_view_form" model="ir.ui.view"> 
        <field name="name">crm.lead.form.view.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="intrest_ids" widget="many2many_tags"/>
                    <field name="sub_intrest_ids" widget="many2many_tags"/>
                    <field name="mailing_list"/>
                    <field name="amsbio_source"/>
                </xpath>
                <xpath expr="//group[@name='lead_priority']/field[@name='tag_ids']" position="after">
                    <field name="intrest_ids" widget="many2many_tags"/>
                    <field name="sub_intrest_ids" widget="many2many_tags"/>
                    <field name="mailing_list"/>
                    <field name="amsbio_source"/>
                </xpath>
            </data>
        </field>
    </record>


</odoo>
