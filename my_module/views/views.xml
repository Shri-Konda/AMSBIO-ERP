  <template id="report_header_footer" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header" style="font-family: Calibri;">
                <div class="row">
                    <div class="col-4 text-left">
                        <h6 style="margin-left: -2px;">
                            <span style="color: #fff;">.</span>
                            <img t-att-src="image_data_uri(doc.company_id.logo)" class="float-left"
                                style="max-height: 45px;" alt="Logo" />
                        </h6>
                    </div>
                    <div class="col-4 text-left">
                        <h6>
                            <div t-field="doc.company_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}' />
                        </h6>
                    </div>
                    <div class="col-4 text-left">
                        <h6>
                            <div>VAT reg. no.: <span t-field="doc.company_id.partner_id.vat" /></div>
                            <div>EORI: <span t-field="doc.company_id.x_studio_eori" /></div>
                            <div>Email: <span t-field="doc.company_id.partner_id.email" /></div>
                            <div><i class="fa fa-phone fa-fw" /><span t-field="doc.company_id.partner_id.phone" /></div>
                        </h6>
                    </div>
                </div>
                <hr />
            </div>
        </xpath>

        <xpath expr="//div[hasclass('footer')]" position="replace">
            <div class="footer" style="font-family: Calibri;">
                <div class="text-center" style="border-top: 1px solid black; font-size: 8pt;">
                    <div class="row">
                        <div class="col-3">
                            <img t-att-src="'/my_module/static/img/Thames_valley.jpg'" class="text-left"
                                style="max-width: 150px; margin-top: 2px;" />
                        </div>
                        <div class="col-6">
                            AMS Biotechnology (Europe) Limited<br />
                            Company registered in England &amp; Wales. Company Reg No: 2117791<br />
                            Goods remain the property of AMS Biotechnology until paid for in full<br />
                            Page: <span class="page" /> / <span class="topage" />
                        </div>
                        <div class="col-3">
                            <img t-att-src="'/my_module/static/img/MicrosoftTeams-image.png'" class="text-right"
                                style="max-width: 150px; max-height: 70px; margin-top: 2px;" />
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
  </template>
</odoo>