<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ti_amsbio_bank_statement_import_view_inherit" model="ir.ui.view">
        <field name="name">ti.amsbio.bank.statement.import.view.inherit</field>
        <field name="model">account.bank.statement.import</field>
        <field name="inherit_id" ref="account_bank_statement_import.account_bank_statement_import_view"/>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <field name="attachment_ids" position="before">
                <group>
                    <group>
                        <field name="use_custom_template" string="Do you want to use custom csv format?"/>
                        <field name="custom_template_id" options="{'no_create': True, 'no_open': True}" attrs="{'invisible': [('use_custom_template', '=', False)], 'required': [('use_custom_template', '=', True)]}"/>
                    </group>
                </group>
            </field>
        </field>
    </record>
</odoo>